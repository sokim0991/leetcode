    "\n",
    "class Solution:\n",
    "    def numberOfSteps (self, num: int) -> int:\n",
    "        bitstring = bin(num)[2:] \n",
    "        return len(bitstring) - 1 + bitstring.count('1')\n",
    "\n",
    "a = Solution()\n",
    "a.numberOfSteps(num)"
